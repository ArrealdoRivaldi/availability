rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Only super_admin users can access the users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }
    
    // Allow read access to data collections for all authenticated users (including guest)
    // Guest users can read data but cannot write
    match /data_celldown/{document} {
      allow read: if true; // Allow read for all users (guest, admin, super_admin)
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Allow read access to other collections for authenticated users
    match /{document=**} {
      allow read: if request.auth != null;
    }
  }
}
