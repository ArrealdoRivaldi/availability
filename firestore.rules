rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to users collection for authenticated users
    // You can modify these rules based on your security requirements
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read access to all collections for authenticated users
    // You can restrict this further based on user roles
    match /{document=**} {
      allow read: if request.auth != null;
    }
  }
}
